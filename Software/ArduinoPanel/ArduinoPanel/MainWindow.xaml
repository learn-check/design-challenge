        <TextBox x:Name="PortInput" HorizontalAlignment="Left" Margin="545,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="24"/>
        <Button x:Name="ArduinoConnect" Content="Maak verbinding" HorizontalAlignment="Left" Margin="420,46,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Portnaam" HorizontalAlignment="Left" Margin="420,10,0,0" VerticalAlignment="Top" Height="24" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <ListBox x:Name="Messages" Margin="10,39,391,119"/>
        <Button x:Name="ArduinoDisconnect" Content="Verbreek verbinding" HorizontalAlignment="Left" Margin="545,46,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Berichten" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="24" Width="115" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="ServerConnect" Content="Maak verbinding met server" HorizontalAlignment="Left" Margin="420,71,0,0" VerticalAlignment="Top" Width="245"/>
    </Grid>
</Window>
